---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const { 
  title = "Pranav Pahuja | IT Consultant & Solutions Designer",
  description = "IT Consultant specializing in business strategy, process improvement, and data-driven solutions."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Pranav Pahuja" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://pranavpahuja.com/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://pranavpahuja.com/images/banner.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://pranavpahuja.com/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://pranavpahuja.com/images/banner.png" />

    <meta property="twitter:image" content="https://pranavpahuja.com/images/banner.png" />

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url} />

    <!-- Fonts -->
    <!-- Space Grotesk is loaded via global.css locally -->
    
    <!-- Schema.org -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "ProfilePage",
        "mainEntity": {
          "@type": "Person",
          "name": "Pranav Pahuja",
          "jobTitle": "IT Consultant & Solutions Designer",
          "url": "https://pranavpahuja.com",
          "image": "https://pranavpahuja.com/images/banner.png",
          "sameAs": [
            "https://www.linkedin.com/in/prnvp/",
            "https://github.com/pranavpahuja"
          ],
          "description": "IT Consultant specializing in business strategy, process improvement, and data-driven solutions."
        }
      }
    </script>
  </head>
  <body class="font-grotesk bg-black text-white">
    <slot />
  </body>
</html>
